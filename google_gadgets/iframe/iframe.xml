<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="__UP_myname__" author="Sundew H. Shin" author_email="wednus@gmail.com" author_affiliation="Wednus Project" screenshot="" thumbnail="" author_location="Seoul" directory_title="iframe" title_url="__UP_mylink__" description="Embed your favorite webpages within your Google Personalized Homepage within this iframe gadget"> 
    <Require feature="dynamic-height"/>
  </ModulePrefs>
  <UserPref name="myname" display_name="Title" required="true" default_value="iframe" />
  <UserPref name="mylink" display_name="Title link" />
  <UserPref name="myurl" display_name="URL" required="true" />
  <UserPref name="myborder" display_name="Border Width" />
  <UserPref name="myscroll" display_name="Scrolling" default_value="auto" />
  <UserPref name="myalign" display_name="Align" datatype="enum" default_value="center">
    <EnumValue value="left" display_value="Left"/>
    <EnumValue value="center" display_value="Center"/>
    <EnumValue value="right" display_value="Right"/>
  </UserPref>
  <Content type="html">
  <![CDATA[ 
  <script type="text/javascript">
    _IG_AdjustIFrameHeight();
  </script>
  <div align="__UP_myalign__" style="margin: 2px; border: __UP_myborder__px solid rgb(204, 204, 204);">
  <iframe name="MyIframe" src="__UP_myurl__" frameborder="0" scrolling="__UP_myscroll__" width="100%" height="100%"></iframe>
  </div>
   ]]> 
  </Content>
</Module>